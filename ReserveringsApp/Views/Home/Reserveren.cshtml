@model MODEL.Reservation.ReservationModel
@{
    ViewData["Title"] = "Reserveren";
}
<div class="reserverenPage">
    
        <div class="row">
            <div class="formReserveren">
                <h1 class="formH1Text">Reserveren</h1>
                <form asp-action="Reserveren" asp-controller="Home">
                    <div class="row formInput">
                        <div class="col-sm-4">
                            Naam:
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="Name" placeholder="Your name goes here" />
                        </div>
                    </div>
                    <div class="row  formInput">
                        <div class="col-sm-4">
                            Datum:
                        </div>

                        <div class="col-sm-4">
                            <input type="date" asp-for="date" />
                        </div>
                    </div>
                    <div class="row  formInput">
                        <div class="col-sm-4">
                            TelefoonNr:
                        </div>

                        <div class="col-sm-4">
                            <input asp-for="telNr" placeholder="Your phone number goes here" />
                        </div>

                    </div>
                    <div class="row  formInput">
                        <div class="col-sm-4">
                            Aantal personen:
                        </div>

                        <div class="col-sm-1">
                            <input type="number" asp-for="amountOfPeaple" />
                        </div>

                    </div>
                    <div class="row  formInput">
                        <div class="col-sm-4">Opmerkingen:</div>

                        <div class="col-sm-4">
                            <input type="text" asp-for="note"/>
                        </div>


                    </div>
                    <div class="row  formInput">
                        <div class="col-lg-1">
                            <input type="submit" value="Reserveer" />
                        </div>

                    </div>


                </form>
            </div>
        </div>


    
</div>